@model List<Eshop.Domain.Domain_models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create"> Add new Product</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="card" style="width: 18rem;margin-right:15px">
                <img class="card-img-top" src="@item.ProductImage" alt="Card image cap" style="height:80%;max-width:90%">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="card-text">@item.ProductDescription</p>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a href="/Products/AddToCart?productId=@item.Id&cartId=1">Add to cart</a> 
                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>